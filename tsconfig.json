{
  "compileOnSave": false,
  "compilerOptions": {
      "declaration": false,
      "emitDecoratorMetadata": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "lib": [
          "esnext"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "noEmit": true,
      "outDir": "dist",
      "resolveJsonModule": true,
      "sourceMap": true,
      "strict": true,
      "target": "es6",
      "typeRoots": [
          "node_modules/@types"
      ],
      "suppressImplicitAnyIndexErrors": true
  },
  "include": [
      "src"
  ],
  "exclude": [
      "**/*.spec.ts",
      "**/__tests__/*.ts"
  ]
}
